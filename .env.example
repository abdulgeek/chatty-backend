# CostKatana Configuration
# Get your API key from https://costkatana.com/dashboard
COSTKATANA_API_KEY=dak_your_key_here

# Default AI model for cost tracking
COSTKATANA_DEFAULT_MODEL=amazon.nova-lite-v1:0

# Cost Tracking Settings
COSTKATANA_COST_TRACKING_ENABLED=true
COSTKATANA_ALERT_THRESHOLD=100
COSTKATANA_CURRENCY=USD
COSTKATANA_TRACKING_INTERVAL=60000

# Cortex Optimization Settings
COSTKATANA_CORTEX_ENABLED=true
COSTKATANA_AUTO_OPTIMIZE=false
COSTKATANA_MODEL_SELECTION=balanced
COSTKATANA_CACHE_ENABLED=true
COSTKATANA_CACHE_TTL=3600

# Analytics Settings
COSTKATANA_ANALYTICS_ENABLED=true
COSTKATANA_DASHBOARD_ENABLED=false
COSTKATANA_REPORTING_INTERVAL=daily
COSTKATANA_METRICS_ENDPOINT=

# Logging Settings
COSTKATANA_LOG_LEVEL=info
COSTKATANA_LOG_TO_FILE=false
COSTKATANA_LOG_PATH=./logs/costkatana.log

# Application Settings
PORT=3000
NODE_ENV=development