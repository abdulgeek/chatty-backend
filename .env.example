# CostKatana Configuration
# Get your API key from https://costkatana.com/dashboard
COSTKATANA_API_KEY=dak_your_key_here

# Default AI model for cost tracking
# Examples: gpt-3.5-turbo, gpt-4, claude-3-opus, amazon.nova-lite-v1:0
COSTKATANA_DEFAULT_MODEL=amazon.nova-lite-v1:0

# Enable automatic tracking via middleware (true/false)
COSTKATANA_AUTO_TRACKING=false

# Enable console logging for cost tracking (true/false)
COSTKATANA_ENABLE_LOGGING=true

# Maximum retry attempts for API calls
COSTKATANA_MAX_RETRIES=3

# Request timeout in milliseconds
COSTKATANA_TIMEOUT=30000

# Cost alert threshold in USD (optional)
# Triggers alert when daily spending exceeds this amount
COSTKATANA_ALERT_THRESHOLD=10.00

# Environment (development/staging/production)
NODE_ENV=development

# Your existing environment variables below
# PORT=3000
# DATABASE_URL=your_database_url